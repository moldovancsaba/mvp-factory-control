# App
NEXTAUTH_URL=http://localhost:3577
NEXTAUTH_SECRET=change-me-please

# GitHub OAuth (login)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Database (docker compose)
DATABASE_URL=postgresql://warroom:warroom@localhost:3579/warroom?schema=public

# GitHub GraphQL token (service token for board reads/writes)
# Needs access to read/write ProjectsV2 and read repo issues.
WARROOM_GITHUB_TOKEN=
WARROOM_GITHUB_PROJECT_OWNER=moldovancsaba
WARROOM_GITHUB_PROJECT_NUMBER=1
WARROOM_TASK_REPO_OWNER=moldovancsaba
WARROOM_TASK_REPO_NAME=mvp-factory-control
WARROOM_DASHBOARD_PRODUCT=WarRoom

# Optional: local worker settings (task runner)
WARROOM_WORKER_AGENT_KEY=Gwen
WARROOM_WORKER_POLL_MS=1200
WARROOM_WORKER_RUNTIME=LOCAL
WARROOM_WORKER_MODEL=deepseek-r1:1.5b
WARROOM_WORKER_HOST=
OLLAMA_BASE_URL=http://127.0.0.1:11434
OLLAMA_MODEL=deepseek-r1:1.5b

# Optional: OpenAI runtime for cloud agents (for example Chappie)
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4.1-nano
OPENAI_API_KEY=

# Optional: local-only dev login (avoid OAuth while bootstrapping)
WARROOM_DEV_LOGIN_EMAIL=
WARROOM_DEV_LOGIN_PASSWORD=

# Optional: RBAC baseline for privileged WarRoom actions.
# Role resolution order: ADMIN -> OPERATOR -> VIEWER -> CLIENT.
# If email is not listed in any role list, WARROOM_RBAC_DEFAULT_ROLE is applied.
WARROOM_RBAC_ADMIN_EMAILS=
WARROOM_RBAC_OPERATOR_EMAILS=
WARROOM_RBAC_VIEWER_EMAILS=
WARROOM_RBAC_CLIENT_EMAILS=
WARROOM_RBAC_DEFAULT_ROLE=OPERATOR
